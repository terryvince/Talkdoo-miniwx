/* pages/review/review.wxss */
page{
  width: 100%;
  height: 1206rpx;
  background: rgba(234,239,243,0.30);
  background-size: 100% 1206rpx;
  position: relative;
}
.stage-img{
  width: 184rpx;
  height: 184rpx;
}
.stage-tip{
  transform: translate3d(100%,0,0);
  z-index: 2;
}
.x-slide{
  width: 592rpx;
  height: 32rpx;
  background: #E0E0E0;
  border-radius: 16rpx;
}
.x-slide-bar{
  height: 32rpx;
  background: #4A90E2;
  border-radius: 16rpx;
  transition: all .5s; 
}

.review-card{
  background: #FFFFFF;
  box-shadow: 0 8rpx 16rpx 10rpx rgba(0,0,0,0.12);
  border-radius: 16rpx;
  width: 526rpx;
  height: 640rpx;
  margin-top: 140rpx;
  padding:0 32rpx;
}
.r-card-img{
  width: 276rpx;
  margin: 86rpx 0 56rpx;
}
