/* pages/comment/comment.wxss */
page{
  background: rgba(234,239,243,0.30);
}
.class-title{width: 100%;padding:26rpx 32rpx;font-size: 32rpx;white-space: nowrap;overflow: hidden;text-overflow: ellipsis}
.icon-star{width: 32rpx;height: 32rpx;background: url(http://media.talkdoo.com/appletstudent/class/hollowStar_icon.svg)no-repeat center;background-size: 100%;margin-right: 28rpx}
.icon-star:last-child{margin-right: 0}
.icon-star.active{background: url(http://media.talkdoo.com/appletstudent/class/star_icon.svg)no-repeat center;background-size: 100%}
.input-wrap{height: auto;padding: 32rpx 0}
.input-wrap input.input-none{line-height: 1;height: auto;margin: 0;padding: 0;border:none;}
.input-wrap textarea{margin: 0;padding: 0;border:none;}
.btn{padding:15rpx 21rpx;text-align: center;line-height: 1;display: inline-block;font-size: 24rpx}
.btn-cyan{background: #CCFEF0;color: #389EC0;}
.btn-radius{border-radius: 8rpx;}
.btn.disabled{background: #bdbdbd;color: white;border: none}
.btn-block-green.disabled{background: #bdbdbd;color: white;border: none}
.btn-default{background: #F7F7F7;border-radius: 10rpx;border: 1px solid rgba(0,0,0,.1);}
.btn-block{padding:24rpx 21rpx;display: block;font-size: 36rpx}
.btn-block-green{width: 100%;border-radius: 40rpx;height: 80rpx;line-height: 80rpx;text-align: center;color: white;background: #8FC31F;}
.btn-block-green:active{color: white}
.txt-black{color: #212121}
.txt-gray{color: #757575}
.txt-green{color: #8FC31F;}
.top-16{margin-top: 16rpx}
.top-32{margin-top: 32rpx}
.left-24{margin-left: 24rpx}
.left-48{margin-left: 48rpx}
.content-padding-lr-32{padding: 0 32rpx;}
.icon-star:before {
  content: "";
}
