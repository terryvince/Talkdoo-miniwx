/* pages/wordsCard/wordsCard.wxss */
page{
  width: 100%;
  height: 100%;
  background: url('http://media.talkdoo.com/appletstudent/login/login_bg.jpg')no-repeat center;
  background-size: 100% 100%;
  overflow: hidden;
}
swiper{
  width: 640rpx;
  height:670rpx;
  margin:218rpx auto 10rpx;
}

swiper-item{
  overflow: visible;
}
.words-item{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 500rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx 10rpx rgba(0,0,0,0.12);
  padding: 26rpx;
}
swiper-item.active{
  z-index: 100;
}
.words-item.active{
  transform: scale(1.2);
  transition: all .2s ease-in 0s;
}
.star-scale{
  width: 32rpx;
  height: 32rpx;
}
.word-img{
  width: 230rpx;
  height: 183rpx;
  overflow: hidden;
}

.word-detail{
  padding: 0 20rpx;
  margin-top: 41rpx;
}