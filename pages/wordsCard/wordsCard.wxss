/* pages/wordsCard/wordsCard.wxss */
page{
  width: 100%;
  height: 100%;
  background: url('http://media.talkdoo.com/appletstudent/login/login_bg.jpg')no-repeat center;
  background-size: 100% 100%;
  overflow: hidden;
}
swiper{
  width: 87%;
  height:670rpx;
  margin:218rpx auto 10rpx;
}
.words-wrap{
  height: 100%;
  position: relative;
}
swiper-item{
  overflow: visible;
}

.words-item{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 554rpx;
  border-radius: 16rpx;
  z-index: 1;
  box-shadow: 0 8rpx 16rpx 10rpx rgba(0,0,0,0.12);
}
.words-item.active{
  transform: scale(1.14);
  transition: all .2s ease-in 0s;
  position: relative;
  z-index: 100;
}